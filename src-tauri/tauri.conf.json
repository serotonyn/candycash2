{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "candycash",
  "version": "0.1.8",
  "identifier": "candycash",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "windows": {
      "webviewInstallMode": {
        "type": "skip"
      }
    },
    "externalBin": [
      "bin/pocketbase"
    ],
    "active": true,
    "targets": [
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZFMDkxRUFCRkE4RjkwQTgKUldTb2tJLzZxeDRKYmtNYlRHMWNCREZVVjEwRW8zQ0JaUjRvZTIvRDZJQ1lrTjJHTi9kcGROM3QK",
      "endpoints": [
        "https://github.com/serotonyn/candycash-update/releases/download/latest/latest.json"
      ]
    }
  }
}